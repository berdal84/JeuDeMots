{
  "name": "jeudemots-ng",
  "version": "0.2.0",
  "scripts": {
    "install": "npm i --prefix ./projects/frontend-react && npm i --prefix ./projects/frontend-ng",
    "pack": "bash ./pack.sh",
    "build": "npm run build-front-ng && npm run build-front-react && npm run build-back",
    "watch": "npm run watch-front-ng & npm run build-back",
    "build-front-react": "npm run --prefix ./projects/frontend-react build",
    "build-front-ng": "npm run --prefix ./projects/frontend-ng build",
    "watch-front-ng": "npm run --prefix ./projects/frontend-ng build --base-href /jeudemots/ --watch --output-path dev/frontend",
    "build-back": "bash ./projects/backend/build.sh"
  },
  "private": true
}
