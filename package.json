{
  "name": "jeudemots-ng",
  "version": "0.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build-front && npm run build-back",
    "watch": "npm run watch-front & npm run watch-back",
    "build-front": "ng build --configuration production --base-href /jeudemots/ --output-path dist/jeudemots",
    "watch-front": "ng build --base-href /jeudemots/ --watch --output-path dev/frontend",
    "build-back": "mkdir -p dist/jeudemots-backend && cp -a ./src/backend/. ./dist/jeudemots-backend/ && mv dist/jeudemots-backend/config.prod.php dist/jeudemots-backend/config.php && rm dist/jeudemots-backend/config.*.php",
    "watch-back": "mkdir -p dev/backend && cp -a ./src/backend/. ./dev/backend/ && mv dev/backend/config.dev.php dev/backend/config.php && rm dev/backend/config.*.php",
    "test": "ng test",
    "test:cov": "ng test --codeCoverage=true --progress=true",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "ngcc"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~6.6.3",
    "tree-kill": "^1.2.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.0",
    "@angular/cli": "~13.3.0",
    "@angular/compiler-cli": "~13.3.0",
    "@angular/language-service": "~13.3.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "copyfiles": "^2.4.1",
    "jasmine-core": "~4.1.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.6.2"
  }
}
